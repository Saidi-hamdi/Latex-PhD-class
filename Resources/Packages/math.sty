\newcommand{\eqpc}[1][]{\ifthenelse{\isempty{#1}}{\ensuremath{\text{~,}}}{\ensuremath{\text{~,~#1}}}}
\newcommand{\eqps}[1][]{\ifthenelse{\isempty{#1}}{\ensuremath{\text{~;}}}{\ensuremath{\text{~;~#1}}}}
\newcommand{\eqpd}{\ensuremath{\text{~.}}}
